{% extends 'base.html.twig' %}

{% block title %}Catégories #{{ category.id }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
        {% if program != null %}
            <h1 class="mt-0">{{ category.name }}</h1>
            <p>{{program.title}}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>  
            {% else %}
            Aucune série trouvée.
            {% endif %}          
        </div>
    </div>

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
{% endblock %}